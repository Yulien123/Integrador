extends ../layout

block contenido
  form(action="/personas" method="post" id="crear-form" class="needs-validation" novalidate)
    div(class="mb-3")
      label(for="dni" class="form-label") Documento:
      input(name="dni", type="number", class="form-control", placeholder="Documento" required)
      div(class="invalid-feedback") DNI no v√°lido o ya registrado.
    div(class="mb-3")
      label(for="nombre" class="form-label") Nombre:
      input(name="nombre", type="text", class="form-control", placeholder="Nombre" required)
      div(class="invalid-feedback") Nombre es obligatorio.
    div(class="mb-3")
      label(for="apellido" class="form-label") Apellido:
      input(name="apellido", type="text", class="form-control", placeholder="Apellido" required)
      div(class="invalid-feedback") Apellido es obligatorio.
    div(class="mb-3")
      label(for="nacimiento" class="form-label") Fecha de Nacimiento:
      input(name="nacimiento", type="date", class="form-control", placeholder="Fecha Nacimiento" required)
    button(type="submit" class="btn btn-primary") Agregar
  script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous")
  script(src="/public/js/persona.js")
